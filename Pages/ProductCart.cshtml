@page
@model AvengerSquad_HardwareNI.Pages.ProductCartModel
@{
    ViewData["Title"] = "Product Cart";
}
<style>
    icon-shape {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        vertical-align: middle;
    }

    .icon-sm {
        width: 2rem;
        height: 2rem;
    }
    .rect {
        background-color: #E2E2E2;
        opacity: 58%;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.58);
        border-radius: 10px;
    }

</style>
<div class="container-fluid text-center">
    <div class="row" style="padding-top:20px;">
        <div class="col-sm-6">
            <p><a class="btn btn-secondary" asp-area="" asp-page="/ProductCart">Products &raquo;</a></p>
        </div>
        <div class="col-sm-6">
            <p><a class="btn btn-secondary" asp-area="" asp-page="/ServiceCart">Services &raquo;</a></p>
        </div>
    </div>
</div>
<div class="container rect">
    <div class="row align-items-center">
        <div class="col-sm-3">
            <div class="form-check check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault"/>
                <label class="form-check-label" for="flexCheckDefault">
                    <svg class="bd-placeholder-img square" width="120" height="120" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#777" /><text x="50%" y="50%" fill="#777" dy=".3em">140x140</text></svg>
                </label>
            </div>
        </div>
        <div class="col-sm-7">
            <p>Multifunctional Universe Diagonal Pliers Needle Nose Pliers Hardware Tools Universal Wire Cutters Electrician</p><br>
            <p>₱800.00</p>
        </div>
        <div class="col-sm-2">
            <div class="input-group w-auto justify-content-end align-items-center">
                <input type="button" value="-" class="button-minus border rounded-circle  icon-shape icon-sm mx-1 " data-field="quantity">
                <input type="number" step="1" max="10" value="1" name="quantity" class="quantity-field border-0 text-center w-25">
                <input type="button" value="+" class="button-plus border rounded-circle icon-shape icon-sm lh-0" data-field="quantity">
            </div>
        </div>
    </div>
</div>
